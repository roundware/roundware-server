sudo apt-get install python-mysqldb python-configobj mysql-server icecast2 ffmpeg apache2 pacpl gstreamer0.10-gnomevfs python-dbus libapache2-mod-fastcgi python-gst0.10 python-django python-flup gstreamer0.10-ffmpeg gstreamer0.10-fluendo-mp3 gstreamer0.10-plugins-base gstreamer0.10-plugins-bad gstreamer0.10-plugins-good gstreamer0.10-plugins-bad-multiverse gstreamer0.10-plugins-ugly libavcodec-extra-53 python-pip gstreamer-tools python-setuptools python-profiler libmagic1 clamav-daemon python-clamav

sudo a2enmod rewrite
# django apps
sudo pip install -r requirements.txt

# use our configurations for ClamAV
sudo cp ./files/freshclam.conf /etc/clamav/freshclam.conf

# update ClamAV with latest viruses/malware detection
sudo freshclam

# start clamav-freshclam services
sudo /etc/init.d/clamav-freshclam start

# make sure clamav-freshclam gets restarted on reboot
sudo crontab -l | { cat; echo "@reboot sudo /etc/init.d/clamav-freshclam start;"} | sudo crontab -
